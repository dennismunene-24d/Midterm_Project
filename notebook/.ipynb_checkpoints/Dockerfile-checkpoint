# Use official Python 3.13 slim image
FROM python:3.13-slim

# Set working directory inside container
WORKDIR /app

# Copy requirements.txt first (leverage Docker cache)
COPY requirements.txt .

# Install system dependencies needed for some Python packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        gcc \
        libffi-dev \
        libssl-dev \
        libxml2-dev \
        libxslt1-dev \
        zlib1g-dev \
        libjpeg-dev \
        wget \
        curl \
    && pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY predict.py .
COPY train.py .
COPY final_dt_model.bin .
COPY *.ipynb .  # Optional if you want notebooks inside container

# Expose a port if using Flask
EXPOSE 5000

# Default command to run your prediction script
CMD ["python", "predict.py"]
